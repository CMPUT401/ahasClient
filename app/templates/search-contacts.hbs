<div class= "container" >
    <br>
    <br>
    <br>
    <div>
        <div class="col-sm-7 col-sm-offset-1 col-md-7  col-md-offset-1">
        <form {{action "filterContact" on="submit" }} > 
        <input class="form-control" placeholder="Search" autofocus="autofocus" id='search-bar' />
        </form>
        </div>
        <div class="col-sm-2 col-md-2">
        <button  {{action "filterContact"  }} type="submit" id="search-button">Search</button>
        </div>
    </div>
    <br>
    <br>
    <div class="row">

        <div class="col-sm-2  col-sm-offset-1 col-md-2 " id="veterinariansHeading"><h3>Veterinarians</h3></div>
        <div class="col-sm-2  col-sm-offset-1 col-md-2 " id="volunteersHeading"><h3>Volunteers</h3></div>
        <div class="col-sm-2  col-sm-offset-1 col-md-2 " id="technicianHeading"><h3>Technicians</h3></div>
         <div class="col-sm-2  col-sm-offset-1 col-md-2 " id="laboratoryHeading"><h3>Laboratory</h3></div>

    </div>
    <div class="row">
 <div class=" col-sm-2 col-sm-offset-1  col-md-2 contactNameList" >
     
                 {{#each  model.contactsFilteredVeterinarian as |contact|}}
                           
                                <p{{action "getContact" contact.id on="click"}} class=' nameListItem  veterinariansContact'>{{contact.first_name}} {{contact.last_name}}</p>
                          

                    {{/each}}
        </div >
      
         <div class=" col-sm-2 col-sm-offset-1 col-md-2 contactNameList" >
                      {{#each  model.contactsFilteredVolunteer as |contact|}}
                           
                                <p{{action "getContact" contact.id on="click"}} class=' nameListItem  volunteersContact' >{{contact.first_name}} {{contact.last_name}}</p>
                           

                    {{/each}}
        </div >
     
        <div class="col-sm-2  col-sm-offset-1 col-md-2 contactNameList" >
                      {{#each  model.contactsFilteredTechnician as |technician|}}
                            
                                <p{{action "getContact" contact.id on="click"}} class=' nameListItem  technician Contact'>{{contact.first_name}} {{contact.last_name}}</p>

                    {{/each}}
        </div >
         <div class="col-sm-2 col-sm-offset-1 col-md-2 contactNameList" >
                      {{#each  model.contactsFilteredLaboratory as |contact|}}
                            
                                <p{{action "getContact" contact.id on="click"}} class=' nameListItem  laboratoryContact'>{{contact.first_name}} {{contact.last_name}}</p>

                    {{/each}}
        </div >
        </div>
                    
</div>
