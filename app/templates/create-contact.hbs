 <h3> Please enter the information for the new contact: </h3>
<form > 
  <label for="name">Name</label>
  <br>
  {{input id='name' value=name}}
  <br>
  <br> 
  <label for="phoneNumber">Phone Number: </label>
  <br>
  {{input id='phoneNumber' value=phoneNumber}}
  <br>
  <br>
  <label for="faxNumber">Fax Number: </label>
  <br>
  {{input type="faxNumber" id='faxNumber' value=faxNumber}}
  <br>
  <br>
  <label for="email">Email: </label>
  <br>
  {{input type="email" id='email' value=email}}
  <br>
  <br>
  <label for="address">Address: </label>
  <br>
  {{input type="address" id='address' value=address}}
  <br>
  <br>
  <label for="type">What type of volunteer is this?</label>
  <br>
  <select id="type">
        <option value="veterinarian"> veterinarian </option>
        <option value="volunteer"> volunteer </option>
        <option value="laboratory"> laboratory </option>
  </select>
  <br>
  <br>
  <button type="submit" {{action 'createContact'}} id="create-contact-button">Create</button>
 </form>
 <br>
 <div id = "alert_placeholder"></div>