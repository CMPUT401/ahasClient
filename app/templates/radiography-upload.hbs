<div id = "alert_placeholder_fileType"></div>
<div id = "alert_placeholder_fileSize"></div>
<form {{action "sendRadiographyResults" model.patientId on="submit"}}>
	<div class = "panel panel-default">
		{{#file-picker fileLoaded="fileLoaded" readAs="readAsDataURL"}}
			<div class = "fileDropZone">
				Drag here or click to upload a file
			</div>
			{{/file-picker}}
	</div>
		
	<div class = "fileDatePicker">
		{{bootstrap-datepicker id='datePicker' value=datePicker autoclose=true placeholder="Date of radiography" class="form-control" required=true}}
	</div>
	<button type = "submit" id = "saveRadiography" class = "saveFileButton">Save</button>
</form>
