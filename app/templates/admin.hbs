<div class="users list-group">
    <h2> Users </h2>
    <div class="row">
        <div class="col-md-2 col-md-offset-1">
            Name
        </div>
        <div class="col-md-2 col-md-offset-2">
            Email
        </div>
    </div>
    <div>
    {{#each model.users as |user|}}
    <div class="row list-group-item">
        <div class="col-md-2 col-md-offset-1">
            {{user.name}}
        </div>
        <div class="col-md-2 col-md-offset-2">
            {{user.email}}
        </div>
    </div>
    {{/each}}
    </div>
</div>