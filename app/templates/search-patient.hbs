<div class="search">
<button  {{action "filterPatient"  }} type="submit" id="search-button">Search</button>
<p> {{model.notesW}} </p>
<input class="form-control" placeholder="Search" autofocus="autofocus" id='search-bar' />
<div class = "nameList" >
	<div class = "list-group">
		{{#each model.patientFiltered as |patient|}}
		    <div class = "row list-group-item clickable" {{action "getPatient" patient.id}}>
		        <p>{{patient.first_name}} {{patient.last_name}}</p>
		    </div>

		{{/each}}
	<br>
	</div>
</div>
</div>