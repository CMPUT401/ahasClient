<div id = "alert_placeholder_firstName"></div>
<div id = "alert_placeholder_lastName"></div>
<div id = "alert_placeholder_clientPhone"></div>
<div id = "alert_placeholder_clientEmail"></div>
<div id = "alert_placeholder_altPrimaryPhone"></div>
<div id = "alert_placeholder_altSecondaryPhone"></div>
<div id = "alert_placeholder_altEmail"></div>
<div id = "alert_placeholder_failure"></div>

<form {{action "submitNewClient" on="submit"}}>
	<div class = "inputGroup">
		<h3>Please fill in the client's contact information</h3>

		<label class = "inputLabel" for = "clientFirstName">Client's First Name</label>
		<div class = "inputBox">
			{{input id='clientFirstName' value=clientFirstName required=false}}<p style="color:red; display:inline;">    *</p>
			
		</div>
		<br>
		<label class = "inputLabel" for = "clientLastName">Client's Last Name</label>
		<div class = "inputBox">
			{{input id='clientLastName' value=clientLastName required=false}} <p style="color:red; display:inline;">    *</p>
			
			
		</div>
		<br>
		<label class = "inputLabel" for = "clientAddressLine1">Client's Address Line 1</label>
		<div class = "inputBox">
			{{input id='clientAddressLine1' value=clientAddressLine1}}
		</div>
		<br>
		<label class = "inputLabel" for = "clientAddressLine2">Client's Address Line 2</label>
		<div class = "inputBox">
			{{input id='clientAddressLine2' value=clientAddressLine2}}
		</div>
		<br>
		<label class = "inputLabel" for = "clientAddressLine3">Client's Address Line 3</label>
		<div class = "inputBox">
			{{input id='clientAddressLine3' value=clientAddressLine3}}
		</div>
		<br>
		<label class = "inputLabel" for = "clientPhone">Client's Phone Number</label>
		<div class = "inputBox">
			{{input id='clientPhone' value=clientPhone}}
			
		</div>
		<br>
		<label class = "inputLabel" for = "clientEmail">Client's Email</label>
		<div class = "inputBox">
			{{input id='clientEmail' value=clientEmail}} 
			
		</div>
		<br>
		
	</div>
	<br>

	<div class = "inputGroup">
		<h3>Please fill in the client's documentation</h3>

		<label class = "inputLabel" for = "clientLICO">LICO</label>
		<div class = "inputBox">
			{{input id='clientLICO' value=clientLICO}}
		</div>
		<br>
		<label class = "inputLabel" for = "clientAISH">AISH</label>
		<div class = "inputBox">
			{{input id='clientAISH' value=clientAISH}}
		</div>
		<br>
		<label class = "inputLabel" for = "clientSA">SA</label>
		<div class = "inputBox">
			{{input id='clientSA' value=clientSA}}
		</div>
		<br>
		<label class = "inputLabel" for = "notesDocumentation">Notes</label>
		<div class = "inputBox">
			{{textarea id='clientNotes' value=clientNotes cols="80" rows="6"}}
		</div>
		<br>
	</div>
	<br>

	<div class = "inputGroup">
		<h3>Please fill in the alternative contact's contact information</h3>

		<label class = "inputLabel" for = "alternativeFirstName">Alternative Contact's First Name</label>
		<div class = "inputBox">
			{{input id='alternativeFirstName' value=alternativeFirstName }}
		</div>
		<br>
		<label class = "inputLabel" for = "alternativeLastName">Alternative Contact's Last Name</label>
		<div class = "inputBox">
			{{input id='alternativeLastName' value=alternativeLastName }}
		</div>
		<br>
		<label class = "inputLabel" for = "alternativeAddressLine1">Alternative Contact's Address Line 1</label>
		<div class = "inputBox">
			{{input id='alternativeAddressLine1' value=alternativeAddressLine1}}
		</div>
		<br>
		<label class = "inputLabel" for = "alternativeAddressLine2">Alternative Contact's Address Line 2</label>
		<div class = "inputBox">
			{{input id='alternativeAddressLine2' value=alternativeAddressLine2}}
		</div>
		<br>
		<label class = "inputLabel" for = "alternativeAddressLine3">Alternative Contact's Address Line 3</label>
		<div class = "inputBox">
			{{input id='alternativeAddressLine3' value=alternativeAddressLine3}}
		</div>
		<br>
		<label class = "inputLabel" for = "alternativePrimaryPhone">Alternative Contact's Primary Phone Number</label>
		<div class = "inputBox">
			{{input id='alternativePrimaryPhone' value=alternativePrimaryPhone}}
			
		</div>
		<br>
		<label class = "inputLabel" for = "alternativeSecondaryPhone">Alternative Contact's Secondary Phone Number</label>
		<div class = "inputBox">
			{{input id='alternativeSecondaryPhone' value=alternativeSecondaryPhone}}
			
		</div>
		<br>
		<label class = "inputLabel" for = "alternativeEmail">Alternative Contact's Email</label>
		<div class = "inputBox">
			{{input id='alternativeEmail' value=alternativeEmail}}
			
		</div>
		<br>
		
	</div>
	<br>
	<button type = "submit" id="create-client-button">Create Client</button>
	<div id = "alert_placeholder_success"></div>
</form>
